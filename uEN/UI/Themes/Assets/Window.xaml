<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local="clr-namespace:uEN.UI.AttachedProperties"
                    >
    <Style TargetType="{x:Type Window}">
        <Setter Property="Foreground"                   Value="{DynamicResource AppForeground}"/>
        <Setter Property="FontFamily"                   Value="{DynamicResource AppFont}"/>
        <Setter Property="FontSize"                     Value="{DynamicResource AppFontSize}"/>
        <Setter Property="Background"                   Value="{DynamicResource WindowTheme}"/>
        <Setter Property="BorderBrush"                  Value="{DynamicResource AppBrand}"/>
        <Setter Property="BorderThickness"              Value="3" />
        <Setter Property="Focusable"                    Value="False" />
        <Setter Property="FocusVisualStyle"             Value="{x:Null}"/>
        <Setter Property="WindowStyle"                  Value="None" />
        <Setter Property="AllowsTransparency"           Value="True" />
        <Setter Property="ResizeMode"                   Value="CanResizeWithGrip" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome ResizeBorderThickness="10" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Background="{TemplateBinding Background}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="0" Height="100" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Margin="10,0,5,0" Width="10" Grid.Column="0" Grid.RowSpan="4" Background="{DynamicResource AppBrand}" >
                                    <Border.RenderTransform>
                                        <TransformGroup>
                                            <SkewTransform AngleY="50" />
                                        </TransformGroup>
                                    </Border.RenderTransform>
                                </Border>
                                <Border Margin="5,0,10,0" Width="10" Grid.Column="1" Grid.RowSpan="4" Background="{DynamicResource AppBrand}" >
                                    <Border.RenderTransform>
                                        <TransformGroup>
                                            <SkewTransform AngleY="50" />
                                        </TransformGroup>
                                    </Border.RenderTransform>
                                </Border>
                                <StackPanel Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Margin="20,15" Orientation="Vertical">
                                    <TextBlock Text="{Binding Content.CompanyName, RelativeSource={RelativeSource TemplatedParent} }"
                                               FontSize="28" FontFamily="{DynamicResource AppBrandLogoFont}" Foreground="{DynamicResource AppForeground}"/>
                                    <TextBlock Text="{Binding Content.CompanyDescription, RelativeSource={RelativeSource TemplatedParent} }"
                                               FontSize="13" FontFamily="{DynamicResource AppBrandLogoFont}" Foreground="{DynamicResource AppForeground}"/>
                                </StackPanel>
                                <Border Grid.Row="3" Grid.ColumnSpan="5" Height="20" >
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" >
                                            <GradientStop Color="{DynamicResource AppBrandColor}" Offset="0"/>
                                            <GradientStop Color="{DynamicResource AppBrandColor}" Offset="0.5"/>
                                            <GradientStop Color="#4d4d4d"  Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>

                                <StackPanel Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" Orientation="Horizontal" Margin="3">
                                    <Button Content="0" Style="{DynamicResource TitleButtonStyle}" local:WindowProxy.Command="Minimize" />
                                    <Button Style="{DynamicResource TitleButtonStyle}" local:WindowProxy.Command="RestoreOrMaximize" />
                                    <Button Content="r" Style="{DynamicResource TitleButtonStyle}" local:WindowProxy.Command="Close" />
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" Orientation="Horizontal" Margin="3">
                                    <TextBlock Text="{Binding Content.UserName, RelativeSource={RelativeSource TemplatedParent} }" Margin="0,5,20,0" TextAlignment="Left" HorizontalAlignment="Center"
                                               FontSize="15" FontFamily="{DynamicResource AppBrandLogoFont}" Foreground="{DynamicResource AppForeground}"/>

                                    <Button Style="{DynamicResource TitleButtonStyle}" Width="25" Height="25">
                                        <Viewbox Stretch="Fill">
                                            <Path Fill="#FF000000" Data="F1 M 38,23.5C 38.8643,23.5 39.7109,23.5756 40.5337,23.7206L 42.6275,18.5381L 48.1901,20.787L 46.0964,25.9692C 47.6473,27.0149 48.9851,28.3527 50.0308,29.9036L 55.213,27.8099L 57.4619,33.3725L 52.2794,35.4664C 52.4244,36.2891 52.5,37.1357 52.5,38C 52.5,38.8643 52.4244,39.7109 52.2794,40.5337L 57.4619,42.6275L 55.213,48.1901L 50.0308,46.0964C 49.0795,47.5073 47.8865,48.7418 46.5112,49.7405L 48.7844,54.8462L 43.3041,57.2891L 41.0307,52.1828C 40.0533,52.3906 39.0394,52.5 38,52.5C 37.1357,52.5 36.2891,52.4244 35.4664,52.2794L 33.3725,57.462L 27.8099,55.213L 29.9036,50.0309C 28.3527,48.9851 27.0149,47.6473 25.9691,46.0964L 20.787,48.1901L 18.538,42.6275L 23.7206,40.5336C 23.5756,39.7109 23.5,38.8643 23.5,38C 23.5,37.1357 23.5756,36.2891 23.7206,35.4664L 18.538,33.3725L 20.787,27.8099L 25.9691,29.9036C 26.9205,28.4927 28.1135,27.2582 29.4889,26.2594L 27.2157,21.1537L 32.6959,18.7109L 34.9694,23.8172C 35.9468,23.6094 36.9606,23.5 38,23.5 Z M 38,28C 32.4771,28 28,32.4772 28,38C 28,43.5229 32.4771,48 38,48C 43.5228,48 48,43.5229 48,38C 48,32.4772 43.5228,28 38,28 Z "/>
                                        </Viewbox>
                                    </Button>
                                </StackPanel>

                            </Grid>
                            <AdornerDecorator Grid.Row="1">
                                <ContentPresenter/>
                            </AdornerDecorator>
                            <Grid Grid.Row="2" Height="25" Background="{DynamicResource AppBrand}" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Content.StatusMessage, RelativeSource={RelativeSource TemplatedParent} }"
                                           Grid.Column="0" Margin="5"
                                           TextAlignment="Left" 
                                           VerticalAlignment="Center" 
                                           Foreground="{DynamicResource AppDisabled}"
                                           FontFamily="{DynamicResource AppFont}"
                                           FontSize="12"
                                           />
                                <TextBlock Text="{Binding Content.SubStatusMessage1, RelativeSource={RelativeSource TemplatedParent} }"
                                           Grid.Column="1" Margin="5"
                                           TextAlignment="Right"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource AppDisabled}"
                                           FontFamily="{DynamicResource AppFont}"
                                           FontSize="12"
                                           />
                                <TextBlock Text="{Binding Content.SubStatusMessage2, RelativeSource={RelativeSource TemplatedParent} }"
                                           Grid.Column="2" Margin="5"
                                           TextAlignment="Right"
                                           VerticalAlignment="Center" 
                                           Foreground="{DynamicResource AppDisabled}"
                                           FontFamily="{DynamicResource AppFont}"
                                           FontSize="12"
                                           />
                                <TextBlock Text="{Binding Content.SubStatusMessage3, RelativeSource={RelativeSource TemplatedParent} }"
                                           Grid.Column="3" Margin="5,5,10,5"
                                           TextAlignment="Right"
                                           VerticalAlignment="Center" 
                                           Foreground="{DynamicResource AppDisabled}"
                                           FontFamily="{DynamicResource AppFont}"
                                           FontSize="12"
                                           />
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>