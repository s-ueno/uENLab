<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:uEN.UI"
                    xmlns:attached="clr-namespace:uEN.UI.AttachedProperties"
                    >
    <Style TargetType="{x:Type local:BizView}">
        <Setter Property="Background"   Value="{DynamicResource WindowTheme}"/>
        <!--<Setter Property="Foreground"   Value="{DynamicResource AppBrand}" />-->
        <Setter Property="Foreground"   Value="{DynamicResource AppForeground}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Language" Value="ja-JP" />
        
        <Setter Property="attached:ViewTransition.TransitionStyle" Value="Slide" />
    </Style>
</ResourceDictionary>